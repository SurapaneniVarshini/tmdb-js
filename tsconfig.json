{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNEXT",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",  
    "paths": {
      "*": ["*"],
      "env": ["../env"]  
    }
  }
}
